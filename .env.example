# Example .env file for FarmaBot
# Copy this file to .env and fill in your API keys

# Database connection string (default is SQLite)
DB_CONNECTION_STRING=sqlite:///farmabot.db

# LLM configuration
# You need at least ONE of these API keys
# For OpenAI models
OPENAI_API_KEY=sk-your-openai-api-key

# For Google models (preferred)
GOOGLE_API_KEY=your-google-api-key

# Default model to use
# Options: gpt-3.5-turbo, gpt-4-turbo, gemini-pro, gemini-2.5-flash, gemini-2.5-pro
MODEL=gemini-2.5-flash

# Logging level
LOG_LEVEL=INFO 